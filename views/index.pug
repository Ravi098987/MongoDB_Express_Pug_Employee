extends layout

block content
  table
    thead
      tr
        th ID
        th Name
        th Email
        th Number
        th Gender
        th Department
        th Location
    tbody
      each employee in employees
        tr
          td= employee.E_id
          td= employee.E_name
          td= employee.E_email
          td= employee.E_number
          td= employee.E_gender
          td= employee.E_dept
          td= employee.E_location
          
          td
            a(href=`/edit/${employee._id}`) Edit |
            a(href=`/delete/${employee._id}` onclick="return confirm('Are you sure?')") Delete
